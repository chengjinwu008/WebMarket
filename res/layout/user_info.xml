<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:background="@drawable/background_ui"
        android:layout_width="match_parent" android:layout_height="150dp"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <com.lanhaijiye.WebMarket.views.CircleImageView
            android:layout_width="80dp" android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/portraint"
            android:background="@drawable/portraint_ui"
            android:id="@id/ui_portraint"
            android:layout_marginTop="10dp"
            />
    <LinearLayout android:layout_width="120dp" android:layout_height="60dp"
                  android:layout_toRightOf="@id/ui_portraint"
                  android:layout_marginTop="25dp"
                  android:layout_marginLeft="15dp"
                  android:orientation="vertical"
            >
        <TextView android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_weight="1"
                  android:id="@id/ui_user_name_text"
                  android:textSize="25sp"
                  android:text="偶尔购物"
                />
        <TextView android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_weight="1"
                  android:paddingTop="5dp"
                  android:text="金牌用户"
                  android:textSize="16sp"
                />
    </LinearLayout>
    <TextView android:layout_alignParentRight="true"
              android:text="账户管理、收货地址>"
              android:textSize="16sp"
              android:layout_marginRight="10dp"
              android:layout_marginBottom="60dp"
              android:layout_alignParentBottom="true"
              android:layout_width="160dp" android:layout_height="wrap_content"/>
    <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent" android:layout_height="50dp">
        <Button style="@style/ucenter_btn"
                android:text="@string/my_favorite"
                />
        <Button style="@style/ucenter_btn"
                android:text="@string/history"
                />
    </LinearLayout>
</RelativeLayout>