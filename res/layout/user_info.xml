<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:background="@drawable/bg"
        android:layout_width="match_parent" android:layout_height="150dp"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <com.lanhaijiye.WebMarket.views.CircleImageView
            android:layout_width="80dp" android:layout_height="80dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/portraint"
            android:background="@drawable/touxiang"
            android:id="@id/ui_portraint"
            android:layout_marginTop="10dp"
            />
    <LinearLayout android:layout_width="120dp" android:layout_height="60dp"
                  android:layout_toRightOf="@id/ui_portraint"
                  android:layout_marginTop="22dp"
                  android:layout_marginLeft="10dp"
                  android:orientation="vertical"
            >
        <TextView android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_weight="1"
                  android:id="@id/ui_user_name_text"
                  android:textSize="25sp"
                  android:textColor="@color/white"
                  android:text="偶尔购物"
                />
        <TextView android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_weight="1"
                  android:textColor="@color/white"
                  android:paddingTop="5dp"
                  android:text="金牌用户"
                  android:textSize="16sp"
                />
    </LinearLayout>
    <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent" android:layout_height="50dp">
        <Button style="@style/ucenter_btn"
                android:text="积分"
                />
        <Button style="@style/ucenter_btn"
                android:text="余额"
                />
    </LinearLayout>
</RelativeLayout>