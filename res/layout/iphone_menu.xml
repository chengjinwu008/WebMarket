<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ListView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_above="@id/cancel"
              android:layout_marginBottom="10dp"
              android:id="@+id/menu"
              android:listSelector="@drawable/black_white_selector"
              android:background="@drawable/transparent_white_blue_border"
              android:divider="@null"
            />
    <Button
            android:textColor="@color/light_blue"
            android:background="@drawable/white_blue_border"
            android:id="@+id/cancel"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/cancel"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            />
</RelativeLayout>