<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button">
        <item name="android:gravity">center</item>
    </style>
    <style name="settiong_item">
        <item name="android:background">@drawable/setting_item_background</item>
        <item name="android:layout_margin">1px</item>
    </style>
    <style name="title_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>
    <style name="title_bar_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="title_bar_icon">
        <item name="android:padding">3dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="alert_dialog">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="alert_dialog_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/alert_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/alert_dialog_out</item>
    </style>
    <style name="ucenter_btn">
        <item name="android:background">@color/dark_gray</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>