<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button">
        <item name="android:gravity">center</item>
    </style>
    <style name="settiong_item">
        <item name="android:background">@drawable/setting_item_background</item>
        <item name="android:layout_margin">1px</item>
    </style>
    <style name="title_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>
    <style name="title_bar_icon">
        <item name="android:padding">3dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="alert_dialog">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ucenter_btn">
        <item name="android:background">@color/dark_gray</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ucenter_item">
        <item name="android:background">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>
    <style name="ucenter_category">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/gray_text</item>
    </style>
    <style name="header_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="header_right_btn">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="header_left_btn">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <style name="ucenter_item_icon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="ucenter_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">18sp</item>
    </style>

<!--动作类-->
    <style name="alert_dialog_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/alert_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/alert_dialog_out</item>
    </style>

    <style name="account_list_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/account_list_in</item>
        <item name="android:windowExitAnimation">@anim/account_list_out</item>
    </style>
</resources>